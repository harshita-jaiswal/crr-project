{
    "env": {
        "es2021": true,
        "node": true,
        "mocha": true,
        "commonjs": true
    },
    "extends": [
        "plugin:chai-friendly/recommended",
        "eslint:recommended"
        ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "chai-friendly"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2,
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "angular/typecheck-string": "off",
        "valid-typeof": "off"
    }
}
